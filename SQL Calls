--select current environment status
select temperature, temp_status, HUMIDITY, HUM_STATUS,BAROMETRIC_PRESSURE, BAR_STATUS,LIGHT_INTENSITY, LIGHT_STATUS from T_ENV_HIST ORDER BY "TIMESTAMP" DESC limit 1;

--select 20 rows of history
select temperature, temp_status, HUMIDITY, HUM_STATUS,BAROMETRIC_PRESSURE, BAR_STATUS,LIGHT_INTENSITY, LIGHT_STATUS from T_ENV_HIST ORDER BY "TIMESTAMP" DESC limit 20;

--select user ideal data
select TEMPERATURE, TEMP_DEV, HUMIDITY, HUM_DEV, BAROMETRIC_PRESSURE, BAR_DEV, LIGHT_INTENSITY, LIGHT_DEV from T_ENV_IDEAL

--update user ideal data
UPDATE T_ENV_IDEAL
SET TEMPERATURE=0, HUMIDITY=0, BAROMETRIC_PRESSURE=0, LIGHT_INTENSITY=0, TEMP_DEV=0, HUM_DEV=0, BAR_DEV=0, LIGHT_DEV=0;

--update notification table
UPDATE T_NOTIFICATION
SET FIRST_NAME=0, LAST_NAME=0, EMAIL=0, PHONE_NUMBER=0, EMAIL_SENT_IND='N';

--select notification table
SELECT FIRST_NAME, LAST_NAME, EMAIL, PHONE_NUMBER
FROM T_NOTIFICATION;
